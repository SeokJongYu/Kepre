
        <div class="clearfix"></div>
        <div class="row">
          <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
              <div class="x_title">
                <!-- %= @title % -->
                <%= @title %>
                <div class="clearfix"></div>
              </div>
              <div class="x_content">
                <br />
                  <%= form_with(model: analysis, local: true, class: "form-horizontal form-label-left", id: "analysis-form") do |form| %>
                  <%= hidden_field_tag :project_id,  @project.id %>
                  <%= hidden_field_tag :datum_id,  @datum.id %>
                  <% if analysis.errors.any? %>
                    <div id="error_explanation">
                      <h2><%= pluralize(analysis.errors.count, "error") %> prohibited this analysis from being saved:</h2>

                      <ul>
                      <% analysis.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                      </ul>
                    </div>
                  <% end %>
                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Analysis name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      
                      <%= form.text_field :title, id: :analysis_title, class: 'form-control col-md-7 col-xs-12', required: true %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Description <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <%= form.text_area :description, id: :analysis_description , class: 'resizable_textarea form-control', placeholder: 'Describe your analysis if you want' %>
                    </div>
                  </div>

                  <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Tool <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <%= form.select :tool_item, ['MHC I', 'MHC II'], :prompt => 'Select tool' %>
                    </div>
                  </div>

                  <div class="ln_solid"></div>
                  <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                      <button class="btn btn-primary" type="button">Cancel</button>
				              <button class="btn btn-primary" type="reset">Reset</button>
                      <button type="submit" class="btn btn-success">Next</button>
                    </div>
                  </div>

                <% end %>
              </div>
            </div>
          </div>
        </div>
