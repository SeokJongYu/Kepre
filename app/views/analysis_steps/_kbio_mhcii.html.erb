               <%= form_with model: @tool_item , local: true, class: "form-horizontal form-label-left", id: "tool-form", url: wizard_path, method: :put  do |form| %>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Name <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <%= form.text_field :name, id: :mhcii_item_name, class: 'form-control col-md-7 col-xs-12', required: true %>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12">Sequence <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <%= form.text_area :datum, id: :datum_content , cols: 80, rows: 15, class: 'resizable_textarea form-control', value: @seq, readonly: true %>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Percentile Rank <span class="required">*</span>
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                      <%= form.text_field :percentile_rank, id: :mhcii_percentile_rank,  class: 'form-control col-md-7 col-xs-12', required: true %>
                    </div>
                </div>

                <div class="ln_solid"></div>

                <div class="form-group">
                    <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                        <button class="btn btn-primary" type="button">Cancel</button>
                        <button class="btn btn-primary" type="reset">Reset</button>
                        <button type="submit" class="btn btn-success">launch</button>
                    </div>
                </div>

            <% end %>